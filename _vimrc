set hlsearch                   " Highlight search
set number                     " Show Number of line
set autoindent
set autowrite
set history=512
set shiftwidth=2
set tabstop=2
set showmatch
set expandtab
set fileencodings=utf-8        " File encoding
set bs=indent,eol,start	       " Use backspace key
set nobackup
set title
set ruler                      " Show position of cursor

syntax on
set t_Co=256                   " If Using linux, probably need this. this mean, used 256 colors. not 16, 32 colors.
colorscheme gruvbox
set background=light           " Light mode colorscheme
